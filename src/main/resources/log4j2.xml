<?xml version="1.0" encoding="UTF-8"?>
<Configuration status = "WARN">
    <Appenders>
        <Console name = "ConsoleAppender" target = "SYSTEM_OUT">
            <PatternLayout
                    pattern = "[%style{%t-%T}{dim,Red}][%highlight{%-5p}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black,DEBUG=magenta, TRACE=blue}][%style{%d{d-MM-yyyy:HH:mm:ss.SSS}}{green}]-%highlight{%l}-> %style{%m}{blue}%throwable{full}%n" />
        </Console>
    </Appenders>|
    <Loggers>
        <Root level = "DEBUG">
            <AppenderRef ref = "ConsoleAppender" />
        </Root>
    </Loggers>
</Configuration>